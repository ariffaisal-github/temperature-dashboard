{
  "name": "backend",
  "version": "1.0.0",
  "description": "Temperature Dashboard Backend Server",
  "main": "cluster.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node cluster.js",
    "dev": "nodemon cluster.js",
    "test:rate-limit": "cross-env k6 run tests/rate-limit/rate-limit-test.js --summary-export=tests/summary/rate-limit-summary.json",
    "test:load": "cross-env k6 run tests/load/load-test.js --summary-export=tests/summary/load-test-summary.json",
    "tokens:generate": "node tests/load/generate-tokens-to-redis.js && node tests/rate-limit/generate-token-to-redis.js",
    "tokens:export": "node tests/load/redis-to-json.js && node tests/rate-limit/redis-to-json.js",
    "test:docker-build": "docker build -t k6-runner -f tests/Dockerfile.k6 .",
    "rate-limit-test:docker": "docker run --rm -v \"%cd%/tests:/tests\" k6-runner run /tests/rate-limit/rate-limit-test.js --summary-export=/tests/summary/rate-limit-summary.json",
    "load-test:docker": "docker run --rm -v \"%cd%/tests:/tests\" k6-runner run /tests/load/load-test.js --summary-export=/tests/summary/load-test-summary.json"
  },
  "author": "Arif Faisal",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^2.2.0",
    "compression": "^1.8.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.5.6"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10"
  }
}
